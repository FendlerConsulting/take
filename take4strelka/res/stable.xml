<!DOCTYPE UserInterface SYSTEM "http://www.upb.de/cs/fujaba/DTDs/UserInterface.dtd">

<UserInterface>

  <!-- **************************** List Actions here ********************** -->

	<Action
			id="take4strelka.diagramCompile"
			class="nz.org.take.strelka.actions.CompileRulesOfDiagram"
			enabled="true">
		<Name>Compile rules of the current diagram</Name>
		<Mnemonic>C</Mnemonic>
		<ToolTip>Compile rules</ToolTip>
		<Icon>nz/org/take/strelka/execute.png</Icon>
	</Action>

	<Action
			id="take4strelka.projectCompile"
			class="nz.org.take.strelka.actions.CompileRulesOfProject"
			enabled="true">
		<Name>Compile rules of the current project</Name>
		<Mnemonic>V</Mnemonic>
		<ToolTip>Compile rules</ToolTip>
		<Icon>nz/org/take/strelka/execute.png</Icon>
	</Action>

  <!-- **************************** Define MenuBar here ********************** -->
	<MenuBar id="mainMenuBar">
	    <MenuSection id="toolsMenuSection">
			<Menu id="toolsMenu">
				<MenuSection id="pluginsSection">
					<Menu id="take4strelka.menu">
						<Name>take rule compiler</Name>
						<Mnemonic>T</Mnemonic>
						<Icon>de/uni_paderborn/fujaba/app/images/none.gif</Icon>
						<MenuSection id="rulecompilermenu">
							<MenuItem actionId="take4strelka.diagramCompile" />
							<MenuItem actionId="take4strelka.projectCompile" />
						</MenuSection>
					</Menu>
				</MenuSection>
			</Menu>
		</MenuSection>
	</MenuBar>


  <!-- **************************** List PopupMenus here ********************** -->

  <!-- **************************** List ToolBars here ********************** -->

</UserInterface>
