# Set root logger level to DEBUG and its only appender to myappender.
log4j.rootLogger=DEBUG, myappender

# myappender as a ConsoleAppender.
log4j.appender.myappender=org.apache.log4j.ConsoleAppender

# myappender as a FileAppender
#log4j.appender.myappender=org.apache.log4j.FileAppender
#log4j.appender.myappender.File=tests.log

# myappender uses the PatternLayout.
log4j.appender.myappender.layout=org.apache.log4j.PatternLayout
log4j.appender.myappender.layout.ConversionPattern=%-4r [%t] %-5p %c %x - %m%n